.profily,
.profily_header {
  border-radius: 8px;
}
.center_menu {
  width: 100%;
  display: inline-block;
}
.center_menu .menu_item {
    font-size: 28rpx;
    letter-spacing: 1px;
    padding: 14px 5%;
    background: #FEFEFE;
    overflow: hidden;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    position: relative;
    border-bottom: 1px solid #EFEFEF;
}
.center_menu .menu_item:hover {
      background: #F6F6F6 !important;
}
.center_menu .menu_item::after {
      content: '';
      width: 30rpx;
      height: 30rpx;
      position: absolute;
      right: 5%;
      background: url(data:image/png;base64,) no-repeat;
      background-size: 100%;
}
.center_menu .menu_item text:nth-of-type(1) {
      margin-left: 10px;
}
.center_menu .menu_item image {
      width: 40rpx;
      height: 40rpx;
}
.center_menu .menu_item:nth-of-type(4) {
      margin-top: 20px;
}
.center_menu:nth-child(1) {
  margin: 20rpx 0;
}
.center_menu:nth-child(2) {
  margin: 0rpx 0 20rpx 0;
}
.center_menu:nth-child(3) {
  margin: 0rpx 0 20rpx 0;
}

